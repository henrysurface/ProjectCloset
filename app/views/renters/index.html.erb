<h1>Rental system</h1>


<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= search_form_for @q_renters do |f| %>
        <%= f.label :suit_appid_cont, "Suit App. ID:" %>
        <%= f.search_field :suit_appid_cont, class: 'form-control' %><br>
        <%= f.label :user_uin_cont, "Customer UIN:" %>
        <%= f.search_field :user_uin_cont, class: 'form-control' %><br>
        <%= f.submit "Search", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>

<p>
    <%= link_to "Rent a suit", 'renters/new', {:class => "btn btn-default"} %>
</p>


<%= will_paginate %>

<%= content_tag :table, class: 'table' do %>
  <%= content_tag :thead, display_renter_sorted_column_headers(@q_renters), nil, false  %>
  <%= content_tag :tbody, display_renter_sorted_search_results(@renters), nil, false  %>
<% end %>

<%= will_paginate %>

<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
  <script src="https://code.jquery.com/jquery-1.12.4.js"></script>
  <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
</head>
<body>

<script>
$(document).ready(function(){
    
    $(".table").bind('change keyup', function(){ 
     var tr = $(this).closest('td');
     console.log(tr);
     if ($(this).val() <= -1 ) tr.addClass('delay');
     else tr.removeClass('delay');
    }).trigger('change');

    
});
</script>
 
<style>
.table .delay {
  color: yellow;
}

</style>
 
</body>
</html>
